<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="336dp"
        android:layout_height="168dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="26dp"
        android:backgroundTint="@color/grayCap"
        android:layout_marginTop="30dp"
        >
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_id_orders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="89475934"
            android:textSize="@dimen/sf14"
            android:textColor="@color/blackCap"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/sfuidisplaybold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="36dp"
            android:layout_height="32dp"
            android:text="@string/date_my_orders"
            android:textColor="@color/blackCap"
            android:textSize="@dimen/sf14"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="52dp"
            android:layout_marginStart="22dp"/>

    <TextView
        android:id="@+id/tv_date_orders"
        android:layout_width="76dp"
        android:layout_height="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="03.06.2021"
        android:textColor="@color/blackCap"
        android:textSize="@dimen/sf14"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/sfuidisplaybold"/>

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="48dp"
        android:layout_height="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/status_orders"
        android:textColor="@color/blackCap"
        android:textSize="@dimen/sf14"
        android:layout_marginBottom="52dp"
        android:layout_marginStart="22dp"/>

    <TextView
        android:id="@+id/tv_status_orders"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        tools:text="В пути"
        android:textSize="@dimen/sf14"
        android:textColor="@color/blackCap"
        android:fontFamily="@font/sfuidisplaybold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="52dp"
        android:layout_marginEnd="20dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>